<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vineeth Todo Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include("header.ejs") %>
        <form>
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input type="text" placeholder="What's next?" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required/>
            </div>
            <div class="flex-auto">
              <input type="date" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4" />
            </div>
            <div class="flex-none">
              <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2">Add </button>
            </div>
          </div>
        </form>
        <%- include('todos.ejs') %>
      </div>
    </div>
  </body>
</html>
